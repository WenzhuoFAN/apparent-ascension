---
const { href, title, desc, icon = "âœ¦", avatar } = Astro.props;
---
<a class="card" href={href}>
  <div class="top">
    <div class="ico" aria-hidden="true">
      {avatar ? (
        <img class="ico-avatar" src={avatar} alt="" width="34" height="34" loading="lazy" decoding="async" />
      ) : (
        icon
      )}
    </div>
    <div class="t">{title}</div>
  </div>
  {desc && <div class="d">{desc}</div>}
</a>

<style lang="scss">
@use "../styles/mixins" as m;
.card{
  @include m.glass;
  @include m.hover-float;
  display: block;
  border-radius: var(--r-lg);
  padding: 16px 16px;
  cursor: pointer;
}
.top{
  display: flex; gap: 10px; align-items: center;
  margin-bottom: 8px;
}
.ico{
  width: 34px; height: 34px;
  border-radius: 12px;
  display: grid; place-items: center;
  background: rgba(255,255,255,.08);
  border: 1px solid rgba(255,255,255,.10);
  overflow: hidden;
}
.ico-avatar{
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}
.t{
  font-weight: 700;
  letter-spacing: .3px;
}
.d{
  font-size: 13px;
  color: rgba(255,255,255,.68);
}
</style>
