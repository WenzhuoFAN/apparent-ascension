---
const { title, tagline, note } = Astro.props;
---
<section class="hero">
  <div class="left">
    <h1 class="h1">{title}</h1>
    <p class="lead">{tagline}</p>
    <p class="note">{note}</p>
    <div class="cta">
      <a class="btn primary" href="/start">从这里入坑</a>
      <a class="btn" href="/schedule">看本周排班</a>
      <a class="btn" href="/library">翻精选内容</a>
    </div>
  </div>
</section>

<style lang="scss">
@use "../styles/mixins" as m;

.hero{
  @include m.glass;
  border-radius: var(--r-lg);
  padding: clamp(18px, 3vw, 26px);
  position: relative;
  overflow: hidden;
}
.hero::before{
  content: "";
  position: absolute;
  inset: -40%;
  background: radial-gradient(closest-side at 30% 30%, rgba(255,255,255,.10), transparent 70%);
  transform: rotate(18deg);
}
.left{ position: relative; }
.lead{
  margin: 0 0 10px;
  color: rgba(255,255,255,.76);
  max-width: 62ch;
}
.note{
  margin: 0;
  color: rgba(255,255,255,.55);
  font-size: 13px;
  max-width: 70ch;
}
.cta{
  margin-top: 16px;
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}
.btn{
  padding: 10px 12px;
  border-radius: 999px;
  border: 1px solid rgba(255,255,255,.12);
  background: rgba(0,0,0,.14);
  color: rgba(255,255,255,.86);
  font-size: 13px;
  transition: transform var(--dur) var(--ease), background var(--dur) var(--ease), border-color var(--dur) var(--ease);
}
.btn:hover{ transform: translateY(-1px); background: rgba(0,0,0,.22); border-color: rgba(255,255,255,.16); }
.btn.primary{
  background: rgba(255,255,255,.12);
  border-color: rgba(255,255,255,.18);
}
.btn:focus-visible{ @include m.focus-ring; }
</style>
